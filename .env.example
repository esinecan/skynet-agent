# Environment configuration for RAG system
# Copy this to .env.local and configure your values

# Google API Key for embeddings (required for real embeddings)
GOOGLE_API_KEY=your_google_api_key_here

# ChromaDB Configuration
CHROMA_URL=http://localhost:8000
CHROMA_COLLECTION=mcp_chat_memories

# RAG Configuration
RAG_ENABLED=true
RAG_MAX_MEMORIES=3
RAG_MIN_SIMILARITY=0.7
RAG_INCLUDE_SESSION_CONTEXT=true

# Memory Storage Path (for backup/metadata)
MEMORY_DATA_PATH=./data/memories
