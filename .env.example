# Environment configuration for RAG system
# Copy this to .env.local and configure your values

# LLM Provider (choose one)
LLM_PROVIDER=google
LLM_MODEL=gemini-2.5-flash-preview-05-20

# API Keys (add the one you need)
GOOGLE_API_KEY=your_google_api_key_here
# ANTHROPIC_API_KEY=your_anthropic_api_key_here  
# OPENAI_API_KEY=your_openai_api_key_here
# DEEPSEEK_API_KEY=your_deepseek_api_key_here

# ChromaDB Configuration
CHROMA_URL=http://localhost:8000
CHROMA_COLLECTION=mcp_chat_memories

# Neo4j Knowledge Graph
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password123

# RAG Configuration
RAG_ENABLED=true
RAG_MAX_MEMORIES=3
RAG_MIN_SIMILARITY=0.7
RAG_INCLUDE_SESSION_CONTEXT=true

# Memory Storage Path
MEMORY_DATA_PATH=./data/memories
