{
  "name": "mcp-chat-client",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "npm-run-all --parallel dev:next dev:kg",
    "dev:next": "next dev",
    "dev:kg": "tsx src/scripts/run-kg-sync.ts --watch",
    "dev:debug": "npm-run-all --parallel \"dev:next:debug\" dev:kg",
    "dev:next:debug": "cross-env NODE_OPTIONS='--inspect' next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "kg:sync": "tsx src/scripts/run-kg-sync.ts",
    "kg:sync:watch": "tsx src/scripts/run-kg-sync.ts --watch",
    "kg:sync:full": "tsx src/scripts/run-kg-sync.ts --full-resync",
    "kg:sync:queue": "tsx src/scripts/run-kg-sync.ts --process-all",
    "test": "npm run test:integration && npm run test:rag && npm run test:neo4j",
    "test:rag": "tsx src/tests/rag-test.ts",
    "test:integration": "node src/tests/integration-test.js",
    "test:neo4j": "tsx src/tests/neo4j-integration.test.js",
    "test:neo4j-advanced": "tsx src/tests/neo4j-advanced-deletion.test.js"
  },
  "dependencies": {
    "@ai-sdk/anthropic": "^1.2.12",
    "@ai-sdk/deepseek": "^0.2.14",
    "@ai-sdk/google": "^1.0.0",
    "@ai-sdk/groq": "^1.2.9",
    "@ai-sdk/mistral": "^1.2.8",
    "@ai-sdk/openai": "^1.3.22",
    "@langchain/core": "^0.2.19",
    "@langchain/langgraph": "^0.0.24",
    "@modelcontextprotocol/sdk": "^1.12.1",
    "@types/better-sqlite3": "^7.6.13",
    "ai": "^4.0.0",
    "better-sqlite3": "^11.10.0",
    "chromadb": "^2.4.6",
    "dotenv": "^16.5.0",
    "jsonrepair": "^3.12.0",
    "neo4j-driver": "^5.28.1",
    "next": "15.0.0",
    "ollama-ai-provider": "^1.2.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "uuid": "^10.0.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.8",
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@types/uuid": "^9.0.8",
    "autoprefixer": "^10.4.21",
    "cross-env": "^7.0.3",
    "eslint": "^8.0.0",
    "eslint-config-next": "15.0.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.4",
    "tailwindcss": "^4.1.8",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3"
  }
}
