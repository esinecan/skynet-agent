{
  "name": "skynet-agent",
  "version": "0.1.0",
  "description": "A cognitive AI agent with short-term and long-term memory capabilities",
  "main": "dist/index.js",
  "scripts": {
    "build": "npm run build:server && npm run build:client",
    "build:server": "tsc",
    "build:client": "cd client && npm run build",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "dev:gui": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "ts-node-dev --respawn --transpile-only src/index.ts --gui",
    "dev:client": "cd client && npm run dev",
    "gui": "node dist/index.js --gui",
    "lint": "eslint . --ext .ts",
    "test": "jest",
    "install:all": "npm install && cd client && npm install",
    "postinstall": "cd client && npm install"
  },
  "keywords": [
    "ai",
    "agent",
    "llm",
    "cognitive",
    "memory",
    "autonomous"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@google/generative-ai": "^0.1.3",
    "@langchain/core": "^0.2.0",
    "@langchain/langgraph": "^0.0.8",
    "@langchain/langgraph-checkpoint": "^0.0.17",
    "@modelcontextprotocol/sdk": "^1.11.4",
    "@types/multer": "^1.4.12",
    "@zilliz/milvus2-sdk-node": "^2.5.9",
    "axios": "^1.9.0",
    "concurrently": "^9.1.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "multer": "^2.0.0",
    "node-cron": "^3.0.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/axios": "^0.9.36",
    "@types/cors": "^2.8.18",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.5",
    "@types/node-cron": "^3.0.11",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "open": "^10.1.2",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  }
}
